space Vectra.Test;

class Player {
    number Age { get; set; }
    string Name { get; set; }
    number Wins = 0;
    number Losses = 0;
    Player(number age, string name) {
        this.Age = age;
        this.Name = name;
        PrintLine("Welcome to the game " + this.Name + "!");
        PrintLine("Your age is " + this.Age);
    }
    
    void Win() {
        PrintLine("Player wins");
        this.Wins = this.Wins + 1;
    }
    
    void Lose() {
        this.Losses = this.Losses + 1;
    }
    
    number GetVictoryPercentage() {
        let totalMatches = this.Wins + this.Losses;
        return this.Wins / totalMatches;
    }
}

class Observer {
    void Observe(Player player) {
        PrintLine("Observing player");
    }
}